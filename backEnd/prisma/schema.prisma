generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  address   String
  totalRent Rent[]
}

model Rent{
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  electricity          Int
  previousBalance      Int?
  rentPerHead          Int
  totalWaterReading    Int
  perUnit              Int
  totalAmountCalculated   Float
  usedBy               User    @relation(fields: [usedById], references: [id])
  usedById             String  @db.ObjectId
}
